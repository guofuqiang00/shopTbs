<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.tbs.dao.user.UserDao" >


    <select id="selectUser" resultType="com.tbs.entity.User" >
        select * from user
    </select>
    <select id="selectUserByMap" parameterType="Map" resultType="com.tbs.entity.User">
        select * from user where id=#{id} and username=#{username}
    </select>
    <select id="selectUserByMap2" parameterType="Map" resultType="com.tbs.entity.User">
        select * from user where id=#{params.id} and username=#{params.username}
    </select>
    <select id="selectUserByUser" parameterType="com.tbs.entity.User" resultType="com.tbs.entity.User">
        select * from user where id=#{user.id} and username=#{user.username}
    </select>





    <insert id="insertUser" parameterType="com.tbs.entity.User">
        insert into user(
        username,
        password
        )values(
         #{username},
         #{password}
        )
</insert>

</mapper>